@model BizNewsAppDB1.Models.User


<div class="card card-authentication1 mx-auto my-4">
	<div class="card-body">
		<div class="card-content p-2">
			<div class="text-center">
				<img src="~/Admin/images/logo-icon.png" alt="logo icon">
			</div>
			<div class="card-title text-uppercase text-center py-3">Edit Profile</div>
			<form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <input type="hidden" asp-for="ArticleComments" />
                <input type="hidden" asp-for="PhotoUrl" />             
                <div class="gap-2">
                    <div class="form-group">
                        <label asp-for="Firstname"></label>
                        <input asp-for="Firstname" type="text" class="form-control p_input">
                    </div>
                    <div class="form-group">
                        <label asp-for="Lastname"></label>
                        <input asp-for="Lastname" type="text" class="form-control p_input">
                        <input asp-for="Id" type="hidden" />
                    </div>
                </div>
                <div class="gap-2">
                     <div class="form-group">
                        <label for="UserName">UserName</label>
                        <input name="UserName" value="@Model.UserName" asp-for="UserName" type="text" class="form-control p_input shadow">
                    </div> 
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input name="Email" asp-for="Email" value="@Model.Email"  type="email" class="form-control p_input shadow">
                    </div>
                </div>         				
				<div class="d-flex gap-2">
					<div class="w-25">
						<img id="image_upload_preview" src="@Model.PhotoUrl" alt="your image" class="img-fluid object-fit-contain" />
					</div>
					<div class="form-group">
						<label for="Photo">ProfilePhoto</label>
						<input id="inputFile" name="Photo" type="file" accept="image/*" class="form-control p_input">
					</div>
				</div>
				
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-block enter-btn">Edit Profile</button>
                </div>
			</form>
		</div>
	</div>
	
</div>


















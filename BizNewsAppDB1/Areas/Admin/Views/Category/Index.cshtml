@model IEnumerable<Category>


<a href="/Admin/Category/Create" class="btn btn-primary m-1 form-control w-100"> <i class="fa-solid fa-user-plus"></i> Create</a>
<table class="table table-striped ">
    <colgroup>
        <col span="2" style="background-color:black">
        <col style="background-color:dodgerblue">
        <col style="background-color:green">
        <col style="background-color:darkred">
        <col style="background-color:rebeccapurple" />
    </colgroup>
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Category Name</th>
            <th>Update</th>
            <th>Detail</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Id</td>
                <td>
                    @item.CategoryName <br>
                    @item.CreateDate.ToString("dddd, dd MMMM yyyy")
                </td>
                <td>
                    <a href="/Admin/category/Update/@item.Id" class="btn btn-info w-29">Update  <i class="fa-solid fa-wrench"></i></a>
                </td>

                <td>
                    <a href="/Admin/category/Detail/@item.Id" class="btn btn-success w-29">Detail  <i class="fa-solid fa-clock-rotate-left"></i></a>
                </td>

                <td>
                    <a href="/Admin/category/Remove/@item.Id" class="btn btn-danger w-29 ">Remove  <i class="fa-solid fa-trash"></i></a>
                </td>
             
            </tr>
        }
    </tbody>
</table>

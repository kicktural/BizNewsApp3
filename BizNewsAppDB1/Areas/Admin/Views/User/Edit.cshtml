@model User
@inject Microsoft.AspNetCore.Identity.UserManager<User> _usermanager

<table class="btn btn-success">
    <tr class="text-center">
        <td class="m-4">@Model.Firstname</td>
        <td>

        <td class="m-2">@Model.Lastname</td>

        <td>

        <td>

        <td class="m-2">@Model.Email</td>

        <td>
    </tr>
</table>

<table class="table table-dark text-center">
    <thead>
        <tr class="text-center">
            <th>Role Name</th>
            <th>Delete</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in await _usermanager.GetRolesAsync(Model))
        {
            <tr class="text-center">
                <td>@item</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-Userid="@Model.Id" asp-route-Role="@item" class="btn btn-outline-danger">Role Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model List<Article>

<table id="dataTable" class="table table-hover">
    <colgroup>
        <col span="2" style="background-color:black">
        <col style="background-color:black">
        <col style="background-color: navy">
        @*     <col style="background-image:url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ9vYLe-HoYPwCyvMxB2h5P2ZhbcNoeLQaoTKIJGYPxqA&s)" />*@
        <col style="background-color:black">
        <col style="background-color:darkgreen">
        <col style="background-color:darkred">
    </colgroup>

    <thead>
        <tr class="text-center">
            <th>IsDelated</th>
            <th>Title</th>
            <th>View Count</th>
            <th>Photo</th>
            <th>Create Data</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @item.IsDelated
                </td>
                <td>@item.Title</td>
                <td>@item.ViewCount</td>
                <td>
                    <img src="@item.PhotoUrl" width="150" alt="" />
                </td>
                <td>@item.CreateDate</td>
                <td>
                    <a href="/Admin/DeleteArticle/Edit/@item.Id" class="btn btn-warning ">Return Photo</a>
                </td>
                <td>
                    <form method="post" asp-controller="DeleteArticle" asp-action="Delete" asp-route-id="@item.Id">

                       <button type="submit" class="btn btn-outline-danger" onclick="return confirm ('Delete This @item.Title?') ">Photo Delete</button>  

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>